{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "group": "build",
            "command": "docker-compose up"
        },
        {
            "label": "Create release notes",
            "type": "shell",
            "group": "build",
            "command": "pwsh utils/Add-ReleaseNotes.ps1"
        },
        {
            "label": "Translate release notes",
            "type": "shell",
            "group": "build",
            "command": "pwsh utils/Translate-ReleaseNotes.ps1"
        },
        {
            "label": "Start Frontend",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "path": "frontend",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "label": "Test Frontend",
            "type": "npm",
            "script": "test",
            "isBackground": true,
            "path": "frontend",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        }
    ]
}