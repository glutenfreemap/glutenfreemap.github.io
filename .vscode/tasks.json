{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "group": "build",
            "command": "docker-compose up"
        },
        {
            "label": "Create release notes",
            "type": "shell",
            "group": "build",
            "command": "pwsh utils/Add-ReleaseNotes.ps1"
        },
        {
            "label": "Translate release notes",
            "type": "shell",
            "group": "build",
            "command": "pwsh utils/Translate-ReleaseNotes.ps1"
        },
        {
            "label": "Start Frontend",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "path": "frontend",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "label": "Test Frontend",
            "type": "npm",
            "script": "test",
            "isBackground": true,
            "path": "frontend",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "label": "Convert fonts",
            "type": "shell",
            "group": "build",
            "command": "pwsh frontend/Convert-Fonts.ps1"
        },
        {
            "type": "npm",
            "script": "generate-style",
            "path": "frontend",
            "problemMatcher": [],
            "label": "npm: generate-style - frontend",
            "detail": "tsx generate_style.ts"
        },
        {
            "type": "npm",
            "script": "i18n:extract",
            "path": "frontend",
            "problemMatcher": [],
            "label": "npm: i18n:extract - frontend",
            "detail": "ngx-translate-extract --input ./src --output ./src/assets/i18n{/pt,/en,/fr,/es}.json --clean --format json"
        }
    ]
}